{% extends 'base.html.twig' %}

{% block title %} Homepage {% endblock %}

{% block body %}
    <div>
        <h1>Blog</h1>
        {% for post in posts %}
            <h2>{{ post.title }}</h2>
            <small>{{ post.publishedAt|date("d/m/Y") }}</small>
            <p>{{ post.content }}</p>
            <a href="{{ path('post_read', { slug: post.slug }) }}">Read More</a>
        {% endfor %}
    </div>
{% endblock %}
